            <Button x:Name="Strelka" Background="SaddleBrown" Height="81" Width="93" >
                <Image Height="72" Source="/Image/strelka.png" Stretch="Fill" Width="89"/>
            </Button>
            <RadioButton Height="23" Width="32" Canvas.Left="100" Canvas.Top="100"/>
            <RadioButton Height="23" Width="32" Canvas.Left="100" Canvas.Top="123"/>
        </Canvas>
    </Grid>
</Window>
