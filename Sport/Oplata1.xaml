<Window x:Class="WpfApp1.Sport.Oplata1"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1.Sport"
        mc:Ignorable="d"
        Title="Oplata1" Height="450" Width="800">
    <Grid>
        <Canvas Background="SaddleBrown" VerticalAlignment="Top" Height="80">
            <TextBlock Text="Оплата" Style="{StaticResource Zagalovok}" Canvas.Left="331" Canvas.Top="17"/>
